    @Override
    public com.okta.sdk.resource.user.ForgotPasswordResponse forgotPassword(Boolean sendEmail, UserCredentials userCredentials) {
        if (sendEmail == null) {
            sendEmail = true; /* default */
        }

        ResetPasswordToken resetPasswordToken = resetPassword(sendEmail);

        if (resetPasswordToken != null) {
            properties.put("resetPasswordUrl", resetPasswordToken.getResetPasswordUrl());
        }

        com.okta.sdk.resource.user.ForgotPasswordResponse forgotPasswordResponse =
            new com.okta.sdk.impl.resource.user.DefaultForgotPasswordResponse(getDataStore(), properties);

        return forgotPasswordResponse;
    }